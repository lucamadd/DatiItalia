<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaebed"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".ui.main.GraphFragment">

    <RelativeLayout
        android:padding="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/andamento_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andamento"
            android:textSize="28dp"
            android:fontFamily="@font/bevietnambold"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/eye_button"
            android:layout_width="28dp"
            android:layout_margin="10dp"
            android:background="@drawable/eye_open"
            android:layout_alignParentRight="true"
            android:layout_height="28dp">

        </Button>



    </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_marginBottom="50dp"
                android:padding="16dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_graph1"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="true"
                    android:layout_marginBottom="30dp"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:contentPadding="16dp"
                    app:cardPreventCornerOverlap="false">
                    <TextView
                        android:id="@+id/graph_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Nuovi casi"
                        android:textSize="13dp"
                        android:fontFamily="@font/bevietnambold"
                        android:textColor="#000000"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchart1"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_graph2"
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="true"
                    android:layout_marginBottom="30dp"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:contentPadding="16dp"
                    app:cardPreventCornerOverlap="false">
                    <TextView
                        android:id="@+id/graph_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Totale attualmente positivi"
                        android:textSize="13dp"
                        android:fontFamily="@font/bevietnambold"
                        android:textColor="#000000"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchart2"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:elevation="8dp"
                    android:id="@+id/card_graph3"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="true"
                    android:layout_marginBottom="30dp"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:contentPadding="16dp"
                    app:cardPreventCornerOverlap="false">
                    <TextView
                        android:id="@+id/graph_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Deceduti"
                        android:textSize="13dp"
                        android:fontFamily="@font/bevietnambold"
                        android:textColor="#000000"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchart3"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/card_graph4"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="true"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:contentPadding="16dp"
                    app:cardPreventCornerOverlap="false">
                    <TextView
                        android:id="@+id/graph_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Guariti"
                        android:textSize="13dp"
                        android:fontFamily="@font/bevietnambold"
                        android:textColor="#000000"
                        />
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barchart4"
                        android:layout_width="match_parent"
                        android:padding="16dp"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

</LinearLayout>