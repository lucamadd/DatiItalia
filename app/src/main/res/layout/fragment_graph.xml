<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eaebed"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".ui.main.GraphFragment">

    <RelativeLayout
        android:padding="16dp"
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/andamento_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andamento"
            android:textSize="28dp"
            android:fontFamily="@font/bevietnambold"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/eye_button"
            android:layout_width="28dp"
            android:layout_margin="10dp"
            android:background="@drawable/eye_open"
            android:layout_alignParentRight="true"
            android:layout_height="28dp">

        </Button>



    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:padding="16dp">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

</LinearLayout>