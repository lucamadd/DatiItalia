<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:title="Generali"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="dark_theme"
            app:title="Tema scuro"
            app:enabled="false"
            app:summary="Disponibile a breve!"/>

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="notification"
            app:title="Attiva notifiche"
            app:summary="Ricevi una notifica quando i dati vengono aggiornati"/>

        <ListPreference
            app:iconSpaceReserved="false"
            app:entries="@array/regioni_entries"
            app:entryValues="@array/regioni_values"
            app:key="regione"
            app:title="Regione preferita"
            app:useSimpleSummaryProvider="true" />


        <Preference
            app:iconSpaceReserved="false"
            app:key="feedback"
            app:title="Lascia feedback"
            app:summary="Invia un feedback allo sviluppatore"/>



    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Info">

        <Preference
            app:iconSpaceReserved="false"
            app:key="info"
            app:title="Versione dell'applicazione"
            app:summary="0.5.5b"/>

        <Preference
            app:iconSpaceReserved="false"
            app:key="update"
            app:title="Controlla aggiornamenti"/>

        <Preference
            app:iconSpaceReserved="false"
            app:key="info_credits"
            app:title="Crediti"/>

    </PreferenceCategory>

</PreferenceScreen>
