<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="SettingsAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/SettingsActionBarStyle</item>
        <item name="colorPrimary">#eaebed</item>
        <item name="colorAccent">@color/ic_launcher_background</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/bevietnambold</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/ic_launcher_background</item>
    </style>

    <style name= "RobotoTextViewStyle" parent= "android:Widget.TextView" >
        <item name="android:fontFamily">@font/bevietnambold</item>
    </style>

    <style name= "SettingsActionBarStyle">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">-8dp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
    </style>
</resources>
