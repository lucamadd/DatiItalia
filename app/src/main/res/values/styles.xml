<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="SettingsAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/SettingsActionBarStyle</item>
        <item name="colorPrimary">#eaebed</item>
        <item name="colorAccent">@color/ic_launcher_background</item>
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="SettingsDarkAppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">true</item>
        <item name="actionBarStyle">@style/SettingsActionBarStyle</item>
        <item name="colorPrimary">#1d1d1d</item>
        <item name="colorPrimaryDark">#1d1d1d</item>
        <item name="android:backgroundTint">#1d1d1d</item>
        <item name="colorAccent">@color/ic_launcher_background</item>
        <item name="android:textViewStyle" > @style/RobotoDarkTextViewStyle </item>
        <item name="android:statusBarColor">#1d1d1d</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/bevietnambold</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/ic_launcher_background</item>
    </style>

    <style name= "RobotoTextViewStyle" parent= "android:Widget.TextView" >
        <item name="android:fontFamily">@font/bevietnambold</item>
    </style>
    <style name= "RobotoDarkTextViewStyle" parent= "android:Widget.TextView" >
        <item name="android:fontFamily">@font/bevietnambold</item>
        <item name="android:textColor">#a8a8a8</item>
        <item name="android:subtitleTextColor">#a8a8a8
        </item>
    </style>

    <style name= "SettingsActionBarStyle" >
    </style>

    <style name="SpinnerTheme">
        <item name="android:textViewStyle" > @style/RobotoTextViewStyle </item>
    </style>
    <style name="DarkAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/ic_launcher_background</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#a8a8a8</item>
        <!-- Used for the background -->
        <item name="android:background">#1d1d1d</item>
    </style>
</resources>
